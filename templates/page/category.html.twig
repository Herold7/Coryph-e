{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
	<div class="vh-100 {{ background }} text-center d-flex flex-column justify-content-center" >
		<p class="title fw-bolder text-white" style="backdrop-filter: blur(10px);">
			{{ title }}
		</p>
		<p class="text-white" style="backdrop-filter: blur(10px);">
            <span>{{ description }}</span>
		</p>
		<div>
			<a href={{ path('app_artist_category', { category: category}) }} class="btn btn-custom btn-lg mt-5 rounded-pill">Découvrez les artistes de cette catégorie</a>
		</div>
	</div>
{% endblock %}
