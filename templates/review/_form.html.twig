<div class="container">
    <div class="row pb-5 my-5 d-flex justify-content-center">
        {% if is_granted('ROLE_USER') %}
            <h4 class="text-center my-4">
            Compléter le formulaire d'avis
            </h4>
            {{ form_errors(formReview) }}
            {{ form_start(formReview, {
                attr: {
                    class: 'col-4 m-auto login-form'
                }
            }) }}
                <div class="form-floating mb-2">
                    {{ form_row(formReview.title,
                {'attr': {'class': 'form-control'}, 'label': 'Renseignez un titre *'}) }}
                </div>
                <div class="form-floating mb-2">
                    {{ form_row(formReview.comment,
                {'attr': {'class': 'form-control'}, 'require': false, 'label': 'Ecrivez votre avis'}) }}
                </div>
                <div class="form-floating mb-2">
                    {{ form_row(formReview.rating,
                {'attr': {'class': 'form-control'}, 'require': false, 'label': 'Donnez une notre entre 1 et 5'}) }}
                </div>
                <button type="submit" class="btn btn-dark">Sauvegardez votre avis</button>
            {{ form_end(formReview) }}
    </div>
        {% else %}
            <p>Vous devez être connecté pour déposer un avis.</p>
        {% endif %}
</div>
