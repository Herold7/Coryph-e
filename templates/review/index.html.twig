{% block title %}Donnez votre avis {% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center py-5">
            <h1>Mes avis</h1>
        </div>
        <div class="d-flex gap-3 overflow-x-scroll">
            {% if app.user.reviews is defined and app.user.reviews|length > 0 %}
                {% for review in app.user.reviews %}
                    <div class="col-md-4 col-sm-12">
                        <div class="card shadow-none text-center h-100">
                            <div class="card-body p-2">
                                {% for review in review.artists %}
                                    <h1 class="fs-3">
                                        {{ review.title }}
                                    </h1>
                                    <p class="fs-3">
                                        {{ review.comment }}
                                    </p>
                                    <p class="fs-3">
                                        {{ review.rating }}
                                    </p>
                                {% endfor %}
                            </div>
                            
                            <div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
            
            <div class=" justify-item-center">
                <p >Vous n'avez pas déposé d'avis.</p>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
